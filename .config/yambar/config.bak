bar:
  height: 28
  location: top
  font: *font-main
  spacing: 4
  margin: 0
  layer: bottom
  foreground: *text
  background: *base
  left:
    - river:
        anchors:
          - base: &river_base
              left-margin: 10
              right-margin: 10 
              default: {string: {text: îž¥, font: *font-main}}
              conditions:
                id == 1: {string: {text: 1, font: *font-main}}  
                id == 2: {string: {text: 2, font: *font-main}}  
                id == 3: {string: {text: 3, font: *font-main}}  
                id == 4: {string: {text: 4, font: *font-main}}  
                id == 5: {string: {text: 5, font: *font-main}}  
                id == 6: {string: {text: 6, font: *font-main}}  
                id == 7: {string: {text: 7, font: *font-main}}  
                id == 8: {string: {text: 8, font: *font-main}}  
                id == 9: {string: {text: 9, font: *font-main}}  
                id == 10: {string: {text: "scratchpad", font: *font-main}}  
                id == 11: {string: {text: "work", font: *font-main}}  

        content:
          map:
            on-click: 
              left: sh -c "riverctl set-focused-tags $((1 << ({id} - 1)))"
              right: sh -c "riverctl toggle-focused-tags $((1 << ({id} -1)))"
              middle: sh -c "riverctl toggle-view-tags $((1 << ({id} -1)))"
            conditions:
              state == urgent:
                map:
                  <<: *river_base
                  deco: *lineurgent
              state == focused:
                map:
                  <<: *river_base
                  deco: *linefocus
              state == visible && ~occupied:
                map:
                  <<: *river_base
              state == visible && occupied:
                map:
                  <<: *river_base
              state == unfocused:
                map:
                  <<: *river_base
              state == invisible && ~occupied: {empty: {}}
              state == invisible && occupied:
                map:
                  <<: *river_base

  center: 
    - foreign-toplevel:
        content:
          map:
            conditions:
              ~activated: {empty: {}}
              activated:
                - string: {max: 50,text: "{app-id}", deco: *line}
    # - river:
    #     title: {string: {max: 50, text: "{title}"}}
    #     content: 
    #       map:
    #         conditions:
    #           ~occupied: {empty: {}}
    #           focused:
    #             string:
    #               margin: 5
    #               text: ""

  right:
    - removables:
        anchors:
          drive: &drive { text: ïŸ‚, font: *font-nerd}
          optical: &optical {text: ï”Ÿ, font: *font-nerd}
        spacing: 5
        content:
          map:
            conditions:
              ~mounted:
                map:
                  on-click: udisksctl mount -b {device}
                  conditions:
                    ~optical: [{string: *drive}, {string: {text: "{label}"}}]
                    optical: [{string: *optical}, {string: {text: "{label}"}}]
              mounted:
                map:
                  on-click: udisksctl unmount -b {device}
                  conditions:
                    ~optical:
                      - string: {<<: *drive, deco: *lineurgent}
                      - string: {text: "{label}"}
                    optical:
                      - string: {<<: *optical, deco: *lineurgent}
                      - string: {text: "{label}"}
    # - network:
    #     name: enp5s0
    #     content:
    #       map:
    #         conditions:
    #           ~carrier: {empty: {}}
    #           carrier:
    #             map:
    #               default: {string: {text: ïž–, font: *font-nerd, foreground: *text}}
    #               conditions:
    #                 state == up && ipv4 != "": {string: {text: ïž–, font: *font-nerd}}
    - network:
        name: wlan0
        poll-interval: 1000
        content:
          map:
            deco: *linenetwork
            default: {string: {text: "ï‡« ", font: *font-nerd, foreground: *text}}
            conditions:
              state == down: {string: {text: ï², font: *font-nerd, foreground: *text}} state == up:
                map:
                  default:
                    - string: {text: ï‡« , font: *font-nerd}
                    - string: {text: "{dl-speed:mb}/{ul-speed:mb} Mb/s"}

                  conditions:
                    ipv4 == "":
                      - string: {text: ï‡« , font: *font-nerd, foreground: *text}
                      - string: {text: "{dl-speed:mb}/{ul-speed:mb} Mb/s", foreground: *text}
    - pipewire:
        anchors:
          volume: &volume
            conditions:
              muted: {string: {text: ó°Ÿ}}
              ~muted: {string: {text: "{linear_volume}%"}}
        content:
          list:
            deco: *linevol
            items:
              - map:
                  conditions:
                    type == "sink":
                      map:
                        conditions:
                          icon == "audio-headset-bluetooth":
                            string: {text: "ðŸŽ§  "}
                        default:
                          - ramp:
                              tag: linear_volume
                              items:
                                - string: {text: "ï€¦"}
                                - string: {text: "ï€§"}
                                - string: {text: "ï€¨"}
                    type == "source":
                      - string: {text: " ðŸŽ™"}
              - map:
                  <<: *volume

    - clock:
